<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1">
        
    <display-name>BloggerClientREST</display-name>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>post-new</servlet-name>
        <jsp-file>/WEB-INF/pages/posts/new.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>post-new</servlet-name>
        <url-pattern>/posts/new</url-pattern>
    </servlet-mapping>
</web-app>
